{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node", "mocha"],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": [
    "./scripts/**/*.ts",
    "./tests/**/*.ts",
    "hardhat.config.cts"
  ],
  "exclude": [
    "node_modules"
  ]
}